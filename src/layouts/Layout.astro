---
import '../styles/global.css';
const { title = 'Tu Marca de Ropa' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Descubre nuestra exclusiva colección de ropa con diseños únicos y de calidad superior." />
    <title>{title}</title>
  </head>
  
  <body class="bg-white text-gray-900 font-sans">
    <slot />
  </body>
</html>
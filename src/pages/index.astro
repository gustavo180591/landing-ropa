---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import FeaturedProducts from '../components/sections/FeaturedProducts.astro';

// Datos del hero
const heroData = {
  title: 'Colección Otoño/Invierno 2025',
  subtitle: 'Diseños únicos que cuentan tu historia',
  buttonText: 'Descubrir Colección',
  buttonLink: '#productos',
  image: '/images/hero-otono-invierno-2025.png'
};
---

<Layout>
  <Hero {...heroData} />
  
  <!-- Sección de Productos Destacados -->
  <section id="productos" class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Productos Destacados</h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">Descubre nuestras prendas más populares</p>
      </div>
      <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
        <!-- Producto 1 -->
        <div class="group relative bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="w-full min-h-80 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
            <img src="/images/products/saco-lana.png" alt="Saco de Lana" class="w-full h-full object-center object-cover lg:w-full lg:h-full">
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">
                <a href="/producto/1" class="hover:text-amber-600 transition-colors">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  Saco de Lana
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">Abrigos</p>
            </div>
            <p class="text-sm font-medium text-gray-900">$129.99</p>
          </div>
          <div class="mt-4">
            <a href="/producto/1" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-300">
              Ver detalles
            </a>
          </div>
        </div>
        
        <!-- Producto 2 -->
        <div class="group relative bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="w-full min-h-80 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
            <img src="/images/products/vestido-floral.png" alt="Vestido Floral" class="w-full h-full object-center object-cover lg:w-full lg:h-full">
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">
                <a href="/producto/2" class="hover:text-amber-600 transition-colors">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  Vestido Floral
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">Vestidos</p>
            </div>
            <p class="text-sm font-medium text-gray-900">$89.99</p>
          </div>
          <div class="mt-4">
            <a href="/producto/2" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-300">
              Ver detalles
            </a>
          </div>
        </div>
        
        <!-- Producto 3 -->
        <div class="group relative bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="w-full min-h-80 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
            <img src="/images/products/jeans-slim.png" alt="Jeans Slim Fit" class="w-full h-full object-center object-cover lg:w-full lg:h-full">
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">
                <a href="/producto/3" class="hover:text-amber-600 transition-colors">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  Jeans Slim Fit
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">Pantalones</p>
            </div>
            <p class="text-sm font-medium text-gray-900">$69.99</p>
          </div>
          <div class="mt-4">
            <a href="/producto/3" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-300">
              Ver detalles
            </a>
          </div>
        </div>
        
        <!-- Producto 4 -->
        <div class="group relative bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="w-full min-h-80 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
            <img src="/images/products/blusa-seda.png" alt="Blusa de Seda" class="w-full h-full object-center object-cover lg:w-full lg:h-full">
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">
                <a href="/producto/4" class="hover:text-amber-600 transition-colors">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  Blusa de Seda
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">Blusas</p>
            </div>
            <p class="text-sm font-medium text-gray-900">$59.99</p>
          </div>
          <div class="mt-4">
            <a href="/producto/4" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-300">
              Ver detalles
            </a>
          </div>
        </div>
      </div>
      <div class="mt-12 text-center">
        <a href="/productos" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-300">
          Ver todos los productos
        </a>
      </div>
    </div>
  </section>
  
  <!-- Sección de Características -->
  <section id="features" class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          Nuestros Valores
        </h2>
        <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
          Calidad, estilo y compromiso con el medio ambiente.
        </p>
      </div>

      <div class="mt-10">
        <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Característica 1 -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="text-blue-600 mb-4">
              <i class="fas fa-truck text-3xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Envíos a todo el país</h3>
            <p class="text-gray-600">Recibí tus productos donde sea que estés.</p>
          </div>
          
          <!-- Característica 2 -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="text-blue-600 mb-4">
              <i class="fas fa-exchange-alt text-3xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Cambios y devoluciones</h3>
            <p class="text-gray-600">Sin complicaciones, garantizado.</p>
          </div>
          
          <!-- Característica 3 -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="text-blue-600 mb-4">
              <i class="fas fa-lock text-3xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Pago seguro</h3>
            <p class="text-gray-600">Tus datos siempre protegidos.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Sección de Contacto -->
  <section id="contacto" class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          Contacto
        </h2>
        <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
          ¿Tienes alguna pregunta? No dudes en contactarnos.
        </p>
      </div>
      
      <div class="mt-10 bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
            <input type="text" id="name" name="name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" id="email" name="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700">Mensaje</label>
            <textarea id="message" name="message" rows="4" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
          </div>
          
          <div>
            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              Enviar mensaje
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>
